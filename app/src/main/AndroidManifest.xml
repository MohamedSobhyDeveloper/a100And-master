<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magdy.abo100">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_file"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LogInActivity" />
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.SearchProductsActivity" />
        <activity
            android:name=".activities.CategoriesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activities.SubCategoriesActivity" />
        <activity android:name=".activities.FavoritesActivity" />
        <activity android:name=".activities.ProductDetailsActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.ConfirmBillActivity" />
        <activity android:name=".activities.OffersActivity" />
        <activity android:name=".activities.DiscountsActivity" />
        <activity android:name=".activities.GiftsActivity" />
        <activity android:name=".activities.SelectPaymentActivity" />
    </application>

</manifest>